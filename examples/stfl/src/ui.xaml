<Background xmlns="https://a1-triard.github.io/tuifw/2023/xaml" Name="root">
  <DockPanel>
    <StackPanel Dock="Top">
      <Background ColorBackground="Black/Brown" ColorLabel="Black/Brown">
        <StretchPanel Vertical="False">
          <Label Text="Little TUIFW example program" />
          <Label Text="Line number one" />
          <Label Text="Fun! Fun! Fun!" />
          <Label Text="Whatever" />
        </StretchPanel>
      </Background>
      <DockPanel Margin="1">
        <StackPanel Dock="Right" ColorLabel="White/None" Margin="4,0,0,0">
          <StaticText Text="this" />
          <StaticText Text="is a" />
          <StaticText Text="test" />
        </StackPanel>
        <StackPanel ColorLabel="Red/None" ColorInputLine="Black/Blue" ColorInputLineFocused="White/Blue">
          <DockPanel Margin="0,0,0,1">
            <Label Text="Field A:" Dock="Left" Margin="0,0,2,0" />
            <InputLine
              Name="a"
              Text="This is a little"
              FocusedPrimary="True"
              FocusTab="b"
              FocusDown="b"
              FocusClick="Primary"
            />
          </DockPanel>
          <StretchPanel Vertical="False">
            <DockPanel>
              <Label Text="Field B:" Dock="Left" Margin="0,0,2,0" />
              <InputLine
                Name="b"
                Text="test for STFL!"
                FocusTab="c"
                FocusDown="c"
                FocusClick="Primary"
              />
            </DockPanel>
            <DockPanel Margin="4,0,0,0">
              <Label Text="Field C:" Dock="Left" Margin="0,0,2,0" />
              <InputLine
                Name="c"
                Text="Hello'World!"
                FocusTab="text"
                FocusDown="text"
                FocusClick="Primary"
              />
            </DockPanel>
          </StretchPanel>
        </StackPanel>
      </DockPanel>
    </StackPanel>
    <TextEdit
      Name="text"
      Dock="Bottom"
      Height="5"
      Text="This is the first line&#x0a;This is the second line"
      FocusTab="a"
      FocusClick="Primary"
    />
    <StretchPanel Vertical="False" ColorLabel="Black/LightGray">
      <StretchPanel>
        <DockPanel>
          <Background ColorBackground="Black/Red" />
          <StaticText Text="A rather long text label" HAlign="Center" />
          <StaticText Text="Short (left)" VAlign="Center" />
          <StaticText Text="Short (right)" HAlign="Right" VAlign="Bottom" />
        </DockPanel>
        <DockPanel>
          <Background ColorBackground="Black/Blue" />
          <StaticText Text="A rather long text label" HAlign="Center" VAlign="Bottom" Margin="0,0,0,2" />
          <StaticText Text="Short (left)" VAlign="Bottom" Margin="0,0,0,1" />
          <StaticText Text="Short (right)" HAlign="Right" VAlign="Bottom" />
        </DockPanel>
      </StretchPanel>
      <DockPanel>
        <Background ColorBackground="Black/Green" />
        <StackPanel HAlign="Right" VAlign="Center">
          <StaticText Text="A rather long text label" />
          <StaticText Text="Short (left)" />
          <StaticText Text="Short (right)" HAlign="Right" />
        </StackPanel>
      </DockPanel>
    </StretchPanel>
  </DockPanel>
</Background>
